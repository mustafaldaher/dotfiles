# ────────────────────────────────────────────
# Default Editor Settings
# ────────────────────────────────────────────
export EDITOR="nvim"
export SUDO_EDITOR="$EDITOR"

# ────────────────────────────────────────────
# Starship Prompt
# ────────────────────────────────────────────
eval "$(starship init zsh)"

# ────────────────────────────────────────────
# Aliases
# ────────────────────────────────────────────
alias vim='nvim'
